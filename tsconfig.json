{
	"compilerOptions": {
		/* Output */
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",

		"declaration": true,
		"declarationMap": true,

		/* Module system */
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,

		/* Type checking */
		"strict": true,
		"skipLibCheck": true,

		/* Workspace support */
		"allowJs": false,
		"allowArbitraryExtensions": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
